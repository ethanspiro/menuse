<div><%=@error%></div>
<%end%>

<div class="container">
  <form id="form_restaurant" class="form-horizontal" action='/restaurants' method="post">
    <fieldset>
      <div id="legend">
        <legend class="">Restaurant Sign Up</legend>
      </div>

